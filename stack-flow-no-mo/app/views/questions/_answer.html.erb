<% @answers.each do |answer|%>
<div>
  <fieldset>
    <legend>Answered by: <%=answer.user.username%></legend>
    <%=answer.content%>
    Score: <%=answer.votes.sum(:value)%>
  </fieldset>

<button><%= link_to "Upvote", a_upvote_question_answer_votes_path(answer.question, answer), method: 'post' %></button>

<button><%= link_to "Downvote", a_downvote_question_answer_votes_path(answer.question, answer), method: 'post' %></button>

</div>
  <%answer.comments.each do |comment|%>
    <div>
      <fieldset>
        <legend>Comment by: <%=comment.user.username%></legend>
        <%=comment.content%>
      </fieldset>
    </div>

  <%end%>
<br>
<hr>
<br>
<%end%>

